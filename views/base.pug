doctype html
html(lang="en")
    head
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN' crossorigin='anonymous')
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Blogify 
    body 
      
      nav.navbar.bg-dark.border-bottom.border-body.navbar-expand-lg.bg-body-tertiary(data-bs-theme='dark')
        .container-fluid
          a.navbar-brand(href='/') Blogify 
          button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNavDropdown', aria-controls='navbarNavDropdown', aria-expanded='false', aria-label='Toggle navigation')
            span.navbar-toggler-icon
          .collapse.navbar-collapse#navbarNavDropdown
            ul.navbar-nav
              li.nav-item
                a.nav-link.active(aria-current='page', href='/') Home 
              if user 
                li.nav-item
                  a.nav-link(href='/blog/add-new') Add Blog
                li.nav-item.dropdown
                    a.nav-link.dropdown-toggle(href='#', role='button', data-bs-toggle='dropdown', aria-expanded='false') #{user.fullName} 
                    ul.dropdown-menu
                      li
                        a.dropdown-item(href='/user/logout') Log Out 
                      li
                        a.dropdown-item(href='/') Delete Blog 
              else 
                li.nav-item
                  a.nav-link.active(aria-current='page', href='/user/signup') Create Account 
                li.nav-item
                  a.nav-link.active(aria-current='page', href='/user/signin') Login 
      if (error)
        .alert.alert-danger(role ="alert") #{error}
      block content
      
      
      script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL' crossorigin='anonymous')


